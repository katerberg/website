{
  "extends": [
    "eslint:recommended",
    "next",
    "prettier",
    "plugin:prettier/recommended",
    "prettier/prettier",
    "plugin:unicorn/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.json", "*.js"]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["unicorn"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/jsx-boolean-value": "error"
  }
}
